{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Electron Main",
      "runtimeExecutable": "${workspaceFolder}/node_modules/.bin/electron",
      "program": "${workspaceFolder}/src/main.js",
      "args": [
        ".",
        "--remote-debugging-port=9223"
      ]
    },
    {
      "type": "chrome",
      "request": "attach",
      "name": "Debug Electron Renderer",
      "port": 9223,
      "webRoot": "${workspaceFolder}"
    }
  ]
}